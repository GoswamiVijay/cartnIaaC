{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminPassword": {
      "type": "securestring"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "resources": [
    {
      "name": "network",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-11-26",
      "properties": {
        "mode": "Incremental",
        "templateLink": "[uri(deployment().properties.templateLink.uri, 'modules/network.json')]",
        "parameters": {
          "location": { "value": "[parameters('location')]" }
        }
      }
    },
    {
      "name": "pip-bastion",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-11-26",
      "dependsOn": ["network"],
      "properties": {
        "mode": "Incremental",
        "templateLink": "[uri(deployment().properties.templateLink.uri, 'modules/pip-bastion.json')]",
        "parameters": {
          "location": { "value": "[parameters('location')]" }
        }
      }
    },
    {
      "name": "pip-traffic",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-11-26",
      "dependsOn": ["network"],
      "properties": {
        "mode": "Incremental",
        "templateLink": "[uri(deployment().properties.templateLink.uri, 'modules/pip-traffic.json')]",
        "parameters": {
          "location": { "value": "[parameters('location')]" }
        }
      }
    },
    {
      "name": "nsg",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-11-26",
      "dependsOn": ["network"],
      "properties": {
        "mode": "Incremental",
        "templateLink": "[uri(deployment().properties.templateLink.uri, 'modules/nsg.json')]",
        "parameters": {
          "location": { "value": "[parameters('location')]" }
        }
      }
    },
    {
      "name": "nic",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-11-26",
      "dependsOn": ["nsg"],
      "properties": {
        "mode": "Incremental",
        "templateLink": "[uri(deployment().properties.templateLink.uri, 'modules/nic.json')]",
        "parameters": {
          "location": { "value": "[parameters('location')]" }
        }
      }
    },
    {
      "name": "storage",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-11-26",
      "dependsOn": ["network"],
      "properties": {
        "mode": "Incremental",
        "templateLink": "[uri(deployment().properties.templateLink.uri, 'modules/storage.json')]",
        "parameters": {
          "location": { "value": "[parameters('location')]" }
        }
      }
    },
    {
      "name": "firewall",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-11-26",
      "dependsOn": ["storage", "network"],
      "properties": {
        "mode": "Incremental",
        "templateLink": "[uri(deployment().properties.templateLink.uri, 'modules/firewall.json')]",
        "parameters": {
          "location": { "value": "[parameters('location')]" }
        }
      }
    },
    {
      "name": "keyvault",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-11-26",
      "dependsOn": ["storage", "network"],
      "properties": {
        "mode": "Incremental",
        "templateLink": "[uri(deployment().properties.templateLink.uri, 'modules/keyvault.json')]",
        "parameters": {
          "location": { "value": "[parameters('location')]" }
        }
      }
    },
    {
      "name": "compute",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-11-26",
      "dependsOn": ["nic"],
      "properties": {
        "mode": "Incremental",
        "templateLink": "[uri(deployment().properties.templateLink.uri, 'modules/compute.json')]",
        "parameters": {
          "location": { "value": "[parameters('location')]" },
          "adminPassword": { "value": "[parameters('adminPassword')]" }
        }
      }
    },
    {
      "name": "app",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-11-26",
      "dependsOn": ["compute"],
      "properties": {
        "mode": "Incremental",
        "templateLink": "[uri(deployment().properties.templateLink.uri, 'modules/app.json')]",
        "parameters": {
          "location": { "value": "[parameters('location')]" }
        }
      }
    }
  ]
}

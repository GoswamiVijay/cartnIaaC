{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-05-01",
      "name": "stgid001s030v001",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "minimumTlsVersion": "TLS1_2",
        "supportsHttpsTrafficOnly": true,
        "allowBlobPublicAccess": false
      }
    },
    {
      "type": "Microsoft.Network/privateEndpoints",
      "apiVersion": "2024-07-01",
      "name": "stg-pe-blob-id001-s031v001",
      "location": "[parameters('location')]",
      "dependsOn": [
        "stgid001s030v001"
      ],
      "properties": {
        "subnet": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'vnet-id001-s001', 'snet-stg-id001-s013')]"
        },
        "privateLinkServiceConnections": [
          {
            "name": "blob-connection",
            "properties": {
              "privateLinkServiceId": "[resourceId('Microsoft.Storage/storageAccounts', 'stgid001s030v001')]",
              "groupIds": ["blob"]
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/privateDnsZones",
      "apiVersion": "2024-07-01",
      "name": "privatelink.blob.core.windows.net"
    },
    {
      "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
      "apiVersion": "2024-07-01",
      "name": "privatelink.blob.core.windows.net/vnet-id001-s001-link",
      "dependsOn": [
        "privatelink.blob.core.windows.net"
      ],
      "properties": {
        "virtualNetwork": {
          "id": "[resourceId('Microsoft.Network/virtualNetworks', 'vnet-id001-s001')]"
        },
        "registrationEnabled": false
      }
    }
  ]
}
